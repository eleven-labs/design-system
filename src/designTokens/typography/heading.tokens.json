{
  "typography": {
    "heading": {
      "base": {
        "font-family": {
          "value": "{font-family.heading.value}"
        },
        "line-height": {
          "value": "{line-height.base.value}"
        }
      },
      "s": {
        "font-size": {
          "value": "20px"
        },
        "font-weight": {
          "value": "{font-weight.bold.value}"
        },
        "text-transform": {
          "value": "uppercase"
        }
      },
      "m": {
        "font-size": {
          "value": "{typography.heading.s.font-size.value} + 8"
        },
        "font-weight": {
          "value": "{font-weight.bold.value}"
        }
      },
      "l": {
        "font-size": {
          "value": "{typography.heading.m.font-size.value} + 8"
        }
      },
      "xl": {
        "font-size": {
          "value": "{typography.heading.m.font-size.value} * 2"
        },
        "font-weight": {
          "value": "{font-weight.regular.value}"
        },
        "text-transform": {
          "value": "uppercase"
        }
      }
    }
  },
  "desktop": {
    "typography": {
      "heading": {
        "s": {
          "font-size": {
            "value": "24px"
          }
        },
        "m": {
          "font-size": {
            "value": "{desktop.typography.heading.s.font-size.value} + 8"
          }
        },
        "l": {
          "font-size": {
            "value": "{desktop.typography.heading.m.font-size.value} + 8"
          }
        },
        "xl": {
          "font-size": {
            "value": "{desktop.typography.heading.m.font-size.value} * 2"
          }
        }
      }
    }
  }
}
