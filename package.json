{
  "name": "@eleven-labs/design-system",
  "version": "0.0.3",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "source": "src/index.ts",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    },
    "./scss/abstracts": {
      "import": "./dist/scss/abstracts/_index.scss",
      "require": "./dist/scss/abstracts/_index.scss"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "husky install && yarn optimize:svgs && yarn build:icons && yarn build:design-tokens",
    "optimize:fonts": "ts-node bin/optimize-fonts",
    "optimize:svgs": "svgo --config svgo.config.js -f src/assets/svgs -o ./public/svgs",
    "build:icons": "svgr --config-file svgr.config.js --typescript -d src/components/Atoms/Svgs public/svgs",
    "build:design-tokens": "ts-node -r dotenv/config bin/build-design-tokens",
    "build": "vite build",
    "start:storybook": "storybook dev -p 6009",
    "build:storybook": "yarn build && yarn storybook build",
    "lint:style": "stylelint 'src/**/*.scss'",
    "lint:es": "eslint --ext .ts,.tsx src bin .storybook",
    "lint": "yarn lint:style && yarn lint:es",
    "test": "jest"
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "eslint --fix"
    ],
    "*.scss": [
      "stylelint --fix"
    ]
  },
  "engines": {
    "npm": "please-use-yarn-instead",
    "yarn": ">= 1.2.0",
    "node": ">= 14.0"
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "react": "18.x",
    "react-dom": "18.x"
  },
  "peerDependencies": {
    "react": "18.x",
    "react-dom": "18.x"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.3",
    "@commitlint/config-conventional": "^17.4.3",
    "@elevenlabs/eslint-config": "^0.0.1",
    "@storybook/addon-actions": "^7.0.0-beta.48",
    "@storybook/addon-essentials": "^7.0.0-beta.48",
    "@storybook/addon-interactions": "^7.0.0-beta.48",
    "@storybook/addon-links": "^7.0.0-beta.48",
    "@storybook/react": "^7.0.0-beta.48",
    "@storybook/react-vite": "^7.0.0-beta.48",
    "@storybook/testing-library": "^0.0.14-next.1",
    "@svgr/cli": "^6.5.1",
    "@types/jest": "^29.4.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.26.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "lint-staged": "^13.1.2",
    "node-sass": "^8.0.0",
    "postcss": "^8.4.21",
    "postcss-normalize": "^10.0.1",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.3",
    "sass": "^1.58.1",
    "storybook": "^7.0.0-beta.48",
    "style-dictionary": "^3.7.2",
    "stylelint": "^15.1.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "svgo": "^3.0.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vite": "^4.1.1",
    "vite-plugin-dts": "^1.7.3",
    "vite-plugin-static-copy": "^0.13.0",
    "vite-tsconfig-paths": "^4.0.5"
  }
}
