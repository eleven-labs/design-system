{
  "name": "@eleven-labs/design-system",
  "version": "1.0.0",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "source": "src/index.ts",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    },
    "./scss/abstracts": {
      "import": "./dist/scss/abstracts/_index.scss",
      "require": "./dist/scss/abstracts/_index.scss"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "husky install && yarn build:icons && yarn build:design-tokens",
    "compress:fonts": "ts-node bin/compress-fonts",
    "build:icons": "svgr --typescript -d src/components/Atoms/Icons src/assets/svgs",
    "build:design-tokens": "ts-node -r dotenv/config bin/build-design-tokens",
    "copy-scss-output-dist": "ts-node bin/copyScssOutputDist",
    "build": "tsc && vite build && yarn copy-scss-output-dist",
    "storybook": "start-storybook -p 6009",
    "build:storybook": "build-storybook",
    "test": "jest"
  },
  "engines": {
    "npm": "please-use-yarn-instead",
    "yarn": ">= 1.2.0",
    "node": ">= 14.0"
  },
  "dependencies": {
    "autosuggest-highlight": "^3.3.4",
    "classnames": "^2.3.2",
    "html-react-parser": "^3.0.7",
    "react": "16.x",
    "react-dom": "16.x"
  },
  "peerDependencies": {
    "react": "16.x",
    "react-dom": "16.x"
  },
  "devDependencies": {
    "@elevenlabs/eslint-config": "^0.0.1",
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/addon-essentials": "^6.5.13",
    "@storybook/addon-interactions": "^6.5.13",
    "@storybook/addon-links": "^6.5.13",
    "@storybook/builder-vite": "^0.2.5",
    "@storybook/react": "^6.5.13",
    "@storybook/testing-library": "^0.0.13",
    "@svgr/cli": "^6.5.1",
    "@types/autosuggest-highlight": "^3.2.0",
    "@types/jest": "^29.2.2",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@types/react-syntax-highlighter": "^15.5.6",
    "@vitejs/plugin-react": "^2.2.0",
    "eslint": "^8.26.0",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "lint-staged": "^13.0.3",
    "node-sass": "^7.0.3",
    "postcss-normalize": "^10.0.1",
    "prettier": "^2.8.3",
    "react-syntax-highlighter": "^15.5.0",
    "sass": "^1.55.0",
    "style-dictionary": "^3.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.4",
    "vite": "^3.2.2",
    "vite-plugin-dts": "^1.6.6",
    "vite-tsconfig-paths": "^3.5.2"
  }
}
