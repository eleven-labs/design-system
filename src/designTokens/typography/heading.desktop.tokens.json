{
  "typography": {
    "base": {
      "letter-spacing": {
        "value": "2px"
      }
    },
    "heading": {
      "xs": {
        "font-size": {
          "value": "20px"
        }
      },
      "s": {
        "font-size": {
          "value": "{typography.heading.xs.font-size} + 4"
        }
      },
      "m": {
        "font-size": {
          "value": "{typography.heading.s.font-size} + 8"
        }
      },
      "l": {
        "font-size": {
          "value": "{typography.heading.m.font-size} + 8"
        }
      },
      "xl": {
        "font-size": {
          "value": "{typography.heading.m.font-size} * 2"
        },
        "letter-spacing": {
          "value": "3px"
        }
      }
    }
  }
}
